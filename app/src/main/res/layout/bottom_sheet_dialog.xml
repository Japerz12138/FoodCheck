<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
android:layout_height="wrap_content">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="272dp"
      android:layout_margin="2dp">

    <TextView
        android:id="@+id/idItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="23dp"
        android:layout_toEndOf="@id/idIVCourse"
        android:layout_toRightOf="@id/idIVCourse"
        android:text="ITEM NAME"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/idCalNum"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idItemName"
        android:layout_marginStart="11dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/idCalTitle"
        android:text="Cal"

        android:textSize="20sp"/>

    <TextView
        android:id="@+id/idTVCourseDuration"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/idCalTitle"
        android:layout_marginStart="-106dp"
        android:layout_marginLeft="-106dp"
        android:layout_marginTop="46dp"
        android:layout_toEndOf="@id/idIVCourse"
        android:layout_toRightOf="@id/idIVCourse"
        android:text="Barcode:"

        android:textSize="15sp"/>

    <TextView
        android:id="@+id/idCalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idItemName"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/idIVCourse"
        android:layout_toRightOf="@id/idIVCourse"
        android:text="Calories:"

        android:textSize="15sp"/>

    <ImageView
        android:id="@+id/idIVCourse"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:rotationX="0"
        android:src="@drawable/ic_scan_barcode"
        app:tint="@color/md_theme_light_primary"/>

    <Button
        android:id="@+id/idBtnDismiss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idIVCourse"
        android:layout_marginStart="10dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="OK"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/idBarcodeNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idCalNum"
        android:layout_marginStart="-62dp"
        android:layout_marginTop="43dp"
        android:layout_toEndOf="@+id/idTVCourseDuration"
        android:text="Barcode"
        android:textSize="16sp"/>

  </RelativeLayout>

</androidx.cardview.widget.CardView>
